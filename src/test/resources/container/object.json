{
    "additionalProperties": {
        "schema": {
            "properties": {
                "p1": {
                    "type": "string",
                    "format": "ip-address"
                }
            },
            "additionalProperties": false
        },
        "good": {
            "p1": "127.0.0.1"
        },
        "bad": {
            "p1": "slashdot.org",
            "p2": null
        },
        "messages": [
            "#: additional properties are not permitted"
        ]
    },
    "additionalPropertiesSchema": {
        "schema": {
            "properties": {
                "p1": {
                    "type": "number",
                    "format": "utc-millisec"
                },
                "p2": {
                    "type": "string",
                    "pattern": "^a"
                }
            },
            "additionalProperties": {
                "type": "string",
                "format": "ipv6"
            }
        },
        "good": {
            "p1": 90128390,
            "p2": "a new world order",
            "p3": "::1"
        },
        "bad": {
            "p1": -10,
            "p4": "ipv6.google.com"
        },
        "messages": [
            "#/p1: epoch cannot be negative",
            "#/p4: string is not a valid IPv6 address"
        ]
    },
    "dependencies": {
        "schema": {
            "type": [ "object", "number" ],
            "properties": {
                "p1": {
                    "type": "string",
                    "format": "time"
                },
                "p2": {
                    "type": "string",
                    "format": "host-name"
                }
            },
            "dependencies": {
                "laurel": "hardy",
                "p1": [ "p2", "p3" ]
            }
        },
        "good": {
            "p1": "20:13:10",
            "p2": "perdu.com",
            "p3": {},
            "laurel": "stanley",
            "hardy": "kubrick"
        },
        "bad": {
            "p1": "whatever",
            "p2": "you want",
            "laurel": "this will fail",
            "at": "structure validation"
        },
        "messages": [
            "#: property laurel is missing dependencies [hardy]",
            "#: property p1 is missing dependencies [p3]"
        ]
    },
    "dependenciesSchema": {
        "schema": {
            "type": "object",
            "properties": {
                "p1": {
                    "format": "color"
                },
                "p2": {}
            },
            "dependencies": {
                "p1": "p2",
                "p2": {
                    "properties": {
                        "p3" : {
                            "type": "string",
                            "format": "email"
                        }
                    }
                }
            }
        },
        "good": {
            "p1": "rgb(0,0,0)",
            "p2": [ 3, 4, 5 ]
        },
        "bad": {
            "p1": null,
            "p2": "hey, joe",
            "p3": "not a valid mail"
        },
        "messages": [
            "#/p3: string is not a valid email address"
        ]
    },
    "required": {
        "schema": {
            "properties": {
                "p1": {
                    "required": true,
                    "format": "date"
                },
                "p2": {
                    "format": "phone"
                }
            }
        },
        "good": {
            "p1": "2010-11-15",
            "p2": "+3927166273"
        },
        "bad": {
            "p2": null
        },
        "messages": [
            "#: required property p1 is missing"
        ]
    },
    "patternProperties": {
        "schema": {
            "properties": {
                "p1": {
                    "type": "integer"
                }
            },
            "patternProperties": {
                "p": {
                    "minimum": 12
                },
                "1$": {
                    "divisibleBy": 7
                }
            },
            "additionalProperties": {
                "type": "string",
                "format": "color"
            }
        },
        "good": {
            "p1": 14,
            "e1": 0.0,
            "x": "blue",
            "p": "whatever",
            "routmachere": "#ae3121"
        },
        "bad": {
            "p1": 19,
            "zz1": 44,
            "p": 8,
            "a": "#z",
            "b": "rgb(32)",
            "c": "rgb(0,0,256)",
            "d": "gah"
        },
        "messages": [
            "#/a: string is not a valid CSS 2.1 color",
            "#/b: string is not a valid CSS 2.1 color",
            "#/c: string is not a valid CSS 2.1 color",
            "#/d: string is not a valid CSS 2.1 color",
            "#/p: number is lower than the required minimum",
            "#/p1: number is not a multiple of divisibleBy",
            "#/zz1: number is not a multiple of divisibleBy"
        ]
    }
}