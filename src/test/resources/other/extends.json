{
    "simple": {
        "schema": {
            "type": "string",
            "pattern": "\\.",
            "extends": {
                "format": "host-name",
                "minLength": 15
            }
        },
        "good": "www.arstechnica.com",
        "bad": "slashdot.org",
        "messages": [
            "#: string is shorter than minLength"
        ]
    },
    "multiple": {
        "schema": {
            "type": "array",
            "items": [
                {
                    "type": "string",
                    "format": "date-time"
                },
                {
                    "type": [ "boolean", "string", "number" ],
                    "format": "style"
                },
                {
                    "format": "ip-address"
                }
            ],
            "extends": [
                {
                    "items": {
                        "minLength": 3
                    }
                },
                {
                    "minItems": 4
                }
            ]
        },
        "good": [
            "2012-03-14T14:01:02+0100",
            "{color: blue}",
            "118.218.0.1",
            "file:///etc/hosts",
            "http://dev.java.net"
        ],
        "bad": []
    }
}