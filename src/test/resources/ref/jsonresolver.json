{
    "singleReferencing": [
        {
            "schema": {
                "$ref": "#/a",
                "a": "b"
            },
            "expected": "b",
            "msg": "pointer resolution failure"
        },
        {
            "schema": {
                "$ref": "#foo",
                "target": {
                    "id": "#foo",
                    "a": "b"
                }
            },
            "expected": {
                "id": "#foo",
                "a": "b"
            },
            "msg": "id resolution failure"
        },
        {
            "schema": {
                "hello": null
            },
            "expected": {
                "hello": null
            },
            "msg": "no $ref failed to return self"
        },
        {
            "schema": {
                "$ref": 31
            },
            "expected": {
                "$ref": 31
            },
            "msg": "malformed $ref failed to return self"
        }
    ],
    "multiReferencing": [
        {
            "schema": {
                "$ref": "#/a",
                "a": {
                    "$ref": "#/b"
                },
                "b": 1
            },
            "expected": 1,
            "msg": "pointer -> pointer resolution failure"
        },
        {
            "schema": {
                "$ref": "#/a",
                "a": {
                    "$ref": "#myid"
                },
                "foo": {
                    "id": "#myid",
                    "hello": "world"
                }
            },
            "expected": {
                "id": "#myid",
                "hello": "world"
            },
            "msg": "pointer -> id resolution failure"
        },
        {
            "schema": {
                "$ref": "#first",
                "foo": {
                    "id": "#first",
                    "$ref": "#second"
                },
                "bar": {
                    "id": "#second",
                    "finance": "bad"
                }
            },
            "expected": {
                "id": "#second",
                "finance": "bad"
            },
            "msg": "id -> id resolution failure"
        },
        {
            "schema": {
                "$ref": "#id",
                "pointer": "theresult",
                "meh": {
                    "id": "#id",
                    "$ref": "#/pointer"
                }
            },
            "expected": "theresult",
            "msg": "id -> pointer resolution failure"
        }
    ]
}