{
    "one": {
        "schema": {
            "disallow": "string"
        },
        "good": 3,
        "bad": "finance will make the world better"
    },
    "simple": {
        "schema": {
            "disallow": [ "integer", "string" ]
        },
        "good": true,
        "bad": "finance"
    },
    "union": {
        "schema": {
            "disallow": [
                "number",
                "boolean",
                {
                    "type": "string",
                    "format": "regex"
                }
            ]
        },
        "good": {},
        "bad": "\\ba/b"
    },
    "uniononly": {
        "schema": {
            "disallow": [
                {
                    "type": "string",
                    "format": "email"
                },
                {
                    "type": "number",
                    "divisibleBy": 3
                }
            ]
        },
        "good": 17,
        "bad": "ilpapa@vaticano.it"
    }
}
