{
    "minLength": {
        "schema": {
            "type": "string",
            "minLength": 4
        },
        "good": "Hello",
        "bad": "foo"
    },
    "maxLength": {
        "schema": {
            "type": "string",
            "maxLength": 42
        },
        "good": "Hello world",
        "bad": "This is way too long a string for this schema"
    },
    "pattern": {
        "schema": {
            "type": "string",
            "pattern": "(\\d{2})hello\\1"
        },
        "good": "foo25hello25prout",
        "bad": "Again, this string is too long, but it's for testing purposes"
    }
}